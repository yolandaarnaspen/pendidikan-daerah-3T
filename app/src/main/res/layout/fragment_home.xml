<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/logo"
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/button_notif"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginStart="90dp"
        android:background="@drawable/notif"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/profil"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="110dp"
        android:src="@drawable/img_1" />

    <TextView
        android:id="@+id/hai_perkenalan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="60dp"
        android:layout_marginTop="120dp"
        android:text="Hai, Dzikri Arfiansyah\nMau Belajar Apa hari ini!"
        android:textColor="@color/purple"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_marginTop="190dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_2" />

    <TextView
        android:id="@+id/text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="210dp"
        android:text="Membaca dimana pun\ndan Kapan pun."
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="250dp"
        android:text="Temukan bacaan terbaik tentang\nBeragam topik menarik."
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="290dp"
        android:background="@color/purple"
        android:text="Baca Gratis di Mosvont Academy"
        android:textColor="@color/white"
        android:textSize="8sp"
        android:textStyle="italic"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/kategori_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="371dp"
        android:text="Popular Categories"
        android:textColor="@color/purple"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_ebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Ebook"
            android:backgroundTint="@color/white"
            android:layout_marginStart="35dp"
            android:layout_marginTop="410dp"
            android:drawableLeft="@drawable/baseline_library_books_24"
            android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
            android:padding="20dp"
            android:drawablePadding="10dp"
            android:textSize="12sp"
            android:textColorHint="#8E97AA"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Comunity"
            android:backgroundTint="@color/white"
            android:layout_marginStart="35dp"
            android:layout_marginTop="410dp"
            android:drawableLeft="@drawable/baseline_chat_24"
            android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
            android:padding="20dp"
            android:drawablePadding="10dp"
            android:textSize="12sp"
            android:textColorHint="#8E97AA"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_artikel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Artikel"
            android:backgroundTint="@color/white"
            android:layout_marginStart="35dp"
            android:layout_marginTop="490dp"
            android:drawableLeft="@drawable/baseline_article_24"
            android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
            android:padding="20dp"
            android:drawablePadding="10dp"
            android:textSize="12sp"
            android:textColorHint="#8E97AA"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button_quipper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Equipper"
            android:backgroundTint="@color/white"
            android:layout_marginStart="30dp"
            android:layout_marginTop="490dp"
            android:drawableLeft="@drawable/baseline_assignment_24"
            android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
            android:padding="20dp"
            android:textStyle="bold"
            android:drawablePadding="15dp"
            android:textSize="12sp"
            android:textColorHint="#8E97AA"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/barudak"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:src="@drawable/img_3"
        android:layout_marginStart="10dp"
        android:layout_marginTop="580dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerahkan duniamu dengan\nMembaca beberapa halaman\nserta Sebarkan Aplikasi ini"
        android:textSize="10sp"
        android:textColor="@color/blue"
        android:layout_gravity="center"
        android:layout_marginTop="225dp"
        android:layout_marginStart="15dp"
        android:textStyle="italic"
        android:textAlignment="textEnd"/>

    <Button
        android:id="@+id/button_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pusat\nbantuan"
        android:textSize="8sp"
        android:drawableLeft="@drawable/baseline_help_24"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:backgroundTint="#00ADB5"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="150dp"
        android:layout_marginTop="590dp"/>


</FrameLayout>