<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".EquipperActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equipper"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/blue"
            android:layout_marginTop="35dp"/>

        <ImageView
            android:layout_width="400dp"
            android:layout_height="190dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/img_4"
            android:layout_marginTop="120dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Metode Quizizz"
            android:layout_marginTop="340dp"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/blue"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="380dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_Inggris"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
                android:backgroundTint="@color/white"
                android:textColorHint="@color/blue"
                android:hint="Bahasa Inggris"/>
            <Button
                android:id="@+id/button_Soshum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textSize="16sp"
                android:backgroundTint="@color/white"
                android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
                android:textColorHint="@color/blue"
                android:hint="Soshum"/>
            <Button
                android:id="@+id/button_Saintek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/white"
                android:textAlignment="textStart"
                android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
                android:textColorHint="@color/blue"
                android:hint="Saintek"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quiziz"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="570dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note."
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginTop="630dp"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/note"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="632dp"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>